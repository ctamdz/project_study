<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== TAG VIEWS ==================== -->
    <!-- Tag Tree View -->
    <record id="project_study_tag_view_tree" model="ir.ui.view">
        <field name="name">project.study.tag.tree</field>
        <field name="model">project.study.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- Tag Action -->
    <record id="project_study_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">project.study.tag</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- ==================== STUDY VIEWS ==================== -->
    
    <!-- LIST VIEW (Default) -->
    <record id="project_study_view_tree" model="ir.ui.view">
        <field name="name">project.study.tree</field>
        <field name="model">project.study</field>
        <field name="arch" type="xml">
            <tree string="Studies" default_order="id desc" multi_edit="1">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="date_deadline" widget="remaining_days"/>
                <field name="parent_id" optional="show"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'done'" 
                       decoration-info="state == 'in_progress'" 
                       decoration-warning="state == 'review'" 
                       decoration-muted="state == 'todo'"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="project_study_view_form" model="ir.ui.view">
        <field name="name">project.study.form</field>
        <field name="model">project.study</field>
        <field name="arch" type="xml">
            <form string="Study">
                <header>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="todo,in_progress,review,done" 
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Study Title..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="parent_id" domain="[('id', '!=', id)]"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="date_deadline"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Add a description..."/>
                        </page>
                        <page string="Sub-studies" name="sub_studies">
                            <field name="child_ids" mode="tree">
                                <tree string="Sub-studies">
                                    <field name="name"/>
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                    <field name="date_deadline" widget="remaining_days"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="active" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="project_study_view_search" model="ir.ui.view">
        <field name="name">project.study.search</field>
        <field name="model">project.study</field>
        <field name="arch" type="xml">
            <search string="Search Studies">
                <field name="name"/>
                <field name="user_id"/>
                <field name="parent_id"/>
                <field name="tag_ids"/>
                <filter string="My Studies" name="my_studies" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="To Do" name="todo" domain="[('state', '=', 'todo')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Review" name="review" domain="[('state', '=', 'review')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Assigned To" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Parent" name="group_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="project_study_view_kanban" model="ir.ui.view">
        <field name="name">project.study.kanban</field>
        <field name="model">project.study</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="color"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date_deadline"/>
                <field name="tag_ids"/>
                <progressbar field="state" colors='{"todo": "muted", "in_progress": "info", "review": "warning", "done": "success"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <t t-if="record.date_deadline.raw_value">
                                        <field name="date_deadline" widget="remaining_days"/>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- GRAPH VIEW - Biểu đồ cột số lượng study theo user -->
    <record id="project_study_view_graph" model="ir.ui.view">
        <field name="name">project.study.graph</field>
        <field name="model">project.study</field>
        <field name="arch" type="xml">
            <graph string="Studies by User" type="bar" sample="1">
                <field name="user_id"/>
                <field name="study_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ACTION - Khi click menu sẽ gọi action này -->
    <record id="project_study_action" model="ir.actions.act_window">
        <field name="name">Study</field>
        <field name="res_model">project.study</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="search_view_id" ref="project_study_view_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new study
            </p>
        </field>
    </record>
</odoo>
